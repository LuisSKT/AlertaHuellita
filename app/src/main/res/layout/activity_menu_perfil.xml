<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MENU.PerfilActivity"
    android:background="@drawable/fondo_5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="PERFIL"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imagen_perfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:background="@drawable/fondo_2" />

            <!-- OPCIONES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_like"
                    android:layout_marginEnd="10dp">
                </ImageView>
                <Button
                    android:id="@+id/Cambiar_foto_perfil"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/blue_500"
                    android:text="Cambiar foto">
                </Button>
                <View
                    android:layout_width="10dp"
                    android:layout_height="wrap_content">
                </View>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_like"
                    android:layout_marginEnd="10dp">
                </ImageView>
                <Button
                    android:id="@+id/Modificar_nombre_perfil"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:backgroundTint="@color/blue_500"
                    android:text="Modificar Nombre">
                </Button>

            </LinearLayout>

            <!-- FORMULARIO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">
                <!-- NOMBRES -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Nombre_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nombre"
                        android:inputType="text">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- APELLIDOS -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Apellido_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Apellidos"
                        android:inputType="text">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- CELULAR -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Celular_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Numero de Telefono"
                        android:inputType="number">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- CORREO-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Correo_perfil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Correo Electronico">

                    </com.google.android.material.textfield.TextInputEditText>

                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>