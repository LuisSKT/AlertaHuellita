<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MENU.ContactanosActivity"
    android:background="@drawable/fondo_13">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:text="CONTACTANOS"
                android:textColor="@color/black"
                android:textSize="50dp"
                android:textStyle="bold" />

            <!-- REDES -->

            <!-- WHATSAPP -->
            <androidx.cardview.widget.CardView
                android:id="@+id/contactanos_whatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green_500"
                app:cardCornerRadius="25dp"
                android:layout_marginBottom="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="WHATSAPP"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_whatsapp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- INSTAGRAM -->
            <androidx.cardview.widget.CardView
                android:id="@+id/contactanos_instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/orange_500"
                app:cardCornerRadius="25dp"
                android:layout_marginBottom="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="INSTAGRAM"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_instagram"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- TIKTOK -->
            <androidx.cardview.widget.CardView
                android:id="@+id/contactanos_tiktok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey_500"
                app:cardCornerRadius="25dp"
                android:layout_marginBottom="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TIKTOK"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"/>
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icon_tiktok"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </ScrollView>




</androidx.appcompat.widget.LinearLayoutCompat>