<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_huella"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <!--PRINCIPAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- TOOLBAR -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/titulo_huella"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/fondo_4"
            app:title="MUNICIPALIDAD SJL"
            app:titleTextColor="@color/white"
            app:titleCentered="true"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/fondo_13">
            <!-- PRINCIPAL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="40dp"
                android:layout_marginTop="20dp">

                <!-- ACCIDENTE -->
                <FrameLayout
                    android:id="@+id/btnAccidente"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:focusable="true"

                    android:layout_marginBottom="50dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fondo_2" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Accidente"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:textStyle="bold" />
                </FrameLayout>

                <!-- ENFERMEDADES -->
                <FrameLayout
                    android:id="@+id/btnEnfermedades"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:focusable="true"

                    android:layout_marginBottom="50dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fondo_2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enfermedades"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:textStyle="bold" />
                </FrameLayout>

                <!-- ABANDONO -->
                <FrameLayout
                    android:id="@+id/btnAbandono"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:focusable="true"

                    android:layout_marginBottom="50dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fondo_2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Abandono"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:textStyle="bold" />
                </FrameLayout>

                <!-- BÚSQUEDA -->
                <FrameLayout
                    android:id="@+id/btnBusqueda"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"

                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:focusable="true"

                    android:layout_marginBottom="50dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/fondo_2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Búsqueda"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:textStyle="bold"/>
                </FrameLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <!-- MENÚ -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navegador_huella"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/fondo_5">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
                <!--HEADER-->
                <include layout="@layout/activity_menu_header" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <!-- PERFIL -->
                <LinearLayout
                    android:id="@+id/perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@android:drawable/ic_menu_myplaces" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PERFIL"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- CONTACTANOS-->
                <LinearLayout
                    android:id="@+id/contactanos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="50dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@android:drawable/ic_menu_call" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONTACTANOS"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- UBICACION -->
                <LinearLayout
                    android:id="@+id/item_ubicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="50dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@android:drawable/ic_menu_mylocation" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UBICACIÓN"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- NOSOTROS -->
                <LinearLayout
                    android:id="@+id/item_nosotros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="50dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@android:drawable/ic_menu_info_details" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NOSOTROS"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- REPORTES -->
                <LinearLayout
                    android:id="@+id/item_reportes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="50dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@android:drawable/ic_menu_report_image" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="REPORTES"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <!-- DONACIONES -->
                <LinearLayout
                    android:id="@+id/item_donaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="50dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@android:drawable/ic_popup_sync" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DONACIONES"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
                <!-- CERRAR SESIÓN -->
                <LinearLayout
                    android:id="@+id/item_cerrar_sesion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="50dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@android:drawable/ic_lock_power_off" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CERRAR SESIÓN"
                        android:textSize="20sp"
                        android:layout_marginStart="10dp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>
