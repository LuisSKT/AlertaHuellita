<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MENU.DonacionesActivity"
    android:background="@drawable/fondo_1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="DONACIONES"
                android:textColor="@color/black"
                android:textSize="60dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Medios de Pagos"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="30dp"/>

            <!-- CARTA 1-->
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="40dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/grey_500"
                android:layout_marginBottom="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Numero de Yape o Plin"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="+51 999 999 999"
                        android:textSize="25dp"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="QR para Yape o Plin"
                        android:textSize="30dp"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:layout_width="380dp"
                        android:layout_height="250dp"
                        android:padding="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icon_qr"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- CARTA 2-->
            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="40dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/grey_500">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="CUENTA BANCARIAS"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="20dp"/>
                    <!--BBVA-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="BBVA:"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_marginStart="40dp"/>
                        <EditText
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:text="********************"/>
                    </LinearLayout>

                    <!--BCP-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="BCP:"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_marginStart="40dp"/>
                        <EditText
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:text="********************"/>
                    </LinearLayout>

                    <!--INTERBANK-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Interbank:"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_marginStart="40dp"/>
                        <EditText
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="********************"/>
                    </LinearLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>


    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>